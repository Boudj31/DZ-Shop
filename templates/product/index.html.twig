{% extends 'base.html.twig' %}

{% block title %}Nos produits {% endblock %}

{% block content %}

 <h1> Nos produits : </h1>

  <div class="row">
    {% for product in products %}
       <div class="col-md-4">
         <div class="product-item text-center">
         <img src="/upload/{{product.illustration}}" alt="{{ product.name }}" class="img-fluid" >
           <h5>{{ product.name }}</h5>
           {{ product.price }}
         </div>
       </div>  
    {% endfor %}
  </div>

{% endblock %}
